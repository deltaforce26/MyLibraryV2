@model MyLibraryV2.Models.Library

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Library</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col mt-4"> 
                <input asp-for="LibraryName" class="form-control" placeholder="Library Name" />
                <span asp-validation-for="LibraryName" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <input type="submit" value="Create" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
